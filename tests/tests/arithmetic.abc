void test_u16()
{
    u16 a = 4500;
    u16 b = 700;
    $assert(a + b == 5200);
    $assert(b + a == 5200);
    $assert(a - b == 3800);
    $assert(b - a == -3800);
    $assert(a * b == 3150000);
    $assert(a / b == 6);
    $assert(a % b == 300);
    $assert(a << 1 == 9000);
    $assert(a >> 1 == 2250);
    $assert(u8(a >> 11) == u8(2));
    
    $assert(a == 4500);
    $assert(--a == 4499);
    $assert(a == 4499);
    
    $assert(a == 4499);
    $assert(a-- == 4499);
    $assert(a == 4498);
    
    $assert(a == 4498);
    $assert(++a == 4499);
    $assert(a == 4499);
    
    $assert(a == 4499);
    $assert(a++ == 4499);
    $assert(a == 4500);
    
    $assert(0 + a == 4500);
    $assert(a + 0 == 4500);
    
    $assert(1 * a == 4500);
    $assert(a * 1 == 4500);
}

