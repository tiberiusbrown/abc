void test_i8()
{
    i8 a = 45;
    i8 b = 7;
    $assert(a + b == 52);
    $assert(b + a == 52);
    $assert(a - b == 38);
    $assert(b - a == -38);
    $assert(a * b == 315);
    $assert(a / b == 6);
    $assert(a % b == 3);
    $assert(a << 1 == 90);
    $assert(a >> 1 == 22);
    
    $assert(a == 45);
    $assert(--a == 44);
    $assert(a == 44);
    
    $assert(a == 44);
    $assert(a-- == 44);
    $assert(a == 43);
    
    $assert(a == 43);
    $assert(++a == 44);
    $assert(a == 44);
    
    $assert(a == 44);
    $assert(a++ == 44);
    $assert(a == 45);
}

void main()
{
    $debug_break();
    
    test_u8();
    //test_i8();
    
    $debug_break();
}
