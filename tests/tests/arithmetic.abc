void test_u8()
{
    u8 a = 45;
    u8 b = 7;
    $assert(a + b == 52);
    $assert(b + a == 52);
    $assert(a - b == 38);
    $assert(b - a == -38);
    $assert(a * b == 315);
    $assert(a / b == 6);
    $assert(a % b == 3);
    $assert(a << 1 == 90);
    $assert(a >> 1 == 22);
    
    $assert(a == 45);
    $assert(--a == 44);
    $assert(a == 44);
    
    $assert(a == 44);
    $assert(a-- == 44);
    $assert(a == 43);
    
    $assert(a == 43);
    $assert(++a == 44);
    $assert(a == 44);
    
    $assert(a == 44);
    $assert(a++ == 44);
    $assert(a == 45);
    
    $assert(0 + a == 45);
    $assert(a + 0 == 45);
    
    $assert(1 * a == 45);
    $assert(a * 1 == 45);
}

