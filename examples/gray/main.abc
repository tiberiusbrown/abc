#shades "4"

int x = 0;

void loop()
{
    while(!$next_frame())
        ;
    
    if($pressed(LEFT_BUTTON )) --x;
    if($pressed(RIGHT_BUTTON)) ++x;
    
    $draw_rect(x     , 10, 30, 50, DARK_GRAY);
    $draw_filled_rect(x + 40, 10, 30, 50, LIGHT_GRAY);
    $draw_filled_rect(x + 80, 10, 30, 50, WHITE);
    
    $display();
}

void main()
{
    while(true)
        loop();
}