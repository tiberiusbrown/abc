constexpr font font_styled = font{ 16 "Alkhemikal.ttf" };
constexpr font font_small = FONT_BR5;

void setup()
{
}

void loop()
{
    while(!$next_frame())
        ;
    
    $draw_text_P(0, 10, font_styled, "Hello World!");
    $draw_text_P(0, 23, font_small, "the quick brown fox jumps\nover the lazy dog");
    $draw_text_P(0, 39, font_small, "THE QUICK BROWN FOX JUMPS\nOVER THE LAZY DOG");
        
    char[20] str;
    $format(str, "seconds: %u", $millis() / 1000);
    $draw_text(0, 60, font_styled, str);
    
    $display();
}

void main()
{
    setup();
    while(true)
        loop();
}
