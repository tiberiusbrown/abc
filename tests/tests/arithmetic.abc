void main()
{
    $debug_break();
    
    test_u8();
    test_i8();
    test_u16();
    test_u24();
    test_u32();
    
    {
        u24 x = 0x444444;
        u24 y = 0x555555;
        
        x += y;
        $assert(x == 0x999999);
    }
    
    $debug_break();
}
